{
  "name": "@arnaud-barre/eslint-config",
  "description": "TS-React focused ESLint flat configuration",
  "version": "6.1.3",
  "license": "MIT",
  "type": "module",
  "author": "Arnaud Barr√© (https://github.com/ArnaudBarre)",
  "private": true,
  "scripts": {
    "postinstall": "bun run build",
    "build": "bun build.ts",
    "test": "node plugin/tests/index.ts",
    "lint": "eslint --max-warnings 0",
    "ci": "tsc && bun run test && bun prettier-ci && bun run build && bun lint",
    "prettier": "prettier --write '**/*.{js,cjs,ts,json,md}'",
    "prettier-ci": "bun prettier --check",
    "release": "bun run ci && cd dist && bun publish"
  },
  "prettier": {
    "quoteProps": "consistent",
    "experimentalOperatorPosition": "start",
    "plugins": [
      "@arnaud-barre/prettier-plugin-sort-imports"
    ]
  },
  "peerDependencies": {
    "eslint": "^9.35.0",
    "typescript": "~5.9"
  },
  "dependencies": {
    "confusing-browser-globals": "^1.0.11",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-unicorn": "^62.0.0",
    "globals": "^16.5.0",
    "typescript-eslint": "^8.46.2"
  },
  "devDependencies": {
    "@arnaud-barre/prettier-plugin-sort-imports": "^0.2.4",
    "@types/bun": "^1.3.1",
    "@typescript-eslint/rule-tester": "^8.46.2",
    "@typescript-eslint/utils": "^8.46.2",
    "prettier": "^3.6.2"
  }
}
