{
  "name": "eslint-config",
  "description": "Monorepo for @arnaud-barre/eslint-config",
  "private": true,
  "workspaces": [
    "eslint-config",
    "eslint-plugin",
    "eslint-plugin-local"
  ],
  "author": "Arnaud Barr√© (https://github.com/ArnaudBarre)",
  "scripts": {
    "prettier": "prettier --write '**/*.{js,cjs,ts,json,md}'"
  },
  "prettier": {
    "quoteProps": "consistent",
    "plugins": [
      "@arnaud-barre/prettier-plugin-sort-imports"
    ]
  },
  "devDependencies": {
    "@arnaud-barre/prettier-plugin-sort-imports": "^0.1.2",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3"
  }
}
